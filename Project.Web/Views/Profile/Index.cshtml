@* @model StopGambleProject.Models.ApplicationUser.ProfileListModel *@
@model ReflectionIT.Mvc.Paging.PagingList<Project.Data.Models.ApplicationUser>
@addTagHelper *, ReflectionIT.Mvc.Paging

<div class="ui center aligned text container">
    <div class="ui grid">
        <div class="two column row">
            <div class="thirteen wide column">
                <h1>
                    User List
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="ui center aligned text container" style="padding-bottom: 25px">
    <table class="ui celled table" id="forumIndexTable">
        <tbody>
        @foreach (var profile in Model)
        {
            <tr>
                <td class="collapsing">
                    <img class="ui small image" src="@profile.ProfileImageUrl" style="width:40px;height:40px;" />
                </td>
                <td class="collapsing" style="border-left: none">
                    <a asp-contoller="Profile" asp-action="Detail" asp-route-id="@profile.Id">@profile.UserName </a>
                </td>
                <td > 
                    Member since: @profile.MemberSince
                </td>
                <td>
                    Rating: @profile.Rating
                </td>
            </tr>
        }

        </tbody>
    </table>
    <nav>
        <vc:pager paging-list="@Model"></vc:pager>
    </nav>
</div>