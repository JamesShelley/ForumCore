@using Project.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

    <table class="ui celled table" id="forumIndexTable">
        <tbody>

        <tr>
            <td class="collapsing">
                <a class="item @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                    <i class="user icon"></i>
                    Username
                </a>
            </td>
        </tr>
        <tr>
            <td class="collapsing">
                <a class="item @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                    <i class="envelope icon"></i>
                    Email
                </a>
            </td>
        </tr>
        <tr>
            <td class="collapsing">
                <a class="item @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                    <i class="lock icon"></i>
                    Password
                </a>
            </td>
        </tr>
        @if (hasExternalLogins)
        {
            <tr>
                <td class="collapsing">
                    <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
                        <i class="globe icon"></i>
                        External Logins
                    </a>
                </td>
            </tr>
        }
        <tr>
            <td class="collapsing">
                <a class="item @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
                    <i class="google icon"></i>
                    Two-factor authentication
                </a>
            </td>
        </tr>
        <tr>
            <td class="collapsing">
                <a class="item @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
                    <i class="info icon"></i>
                    Personal Data
                </a>
            </td>
        </tr>

        </tbody>
    </table>
