@{
    ViewData["Title"] = "Admin";
}

<div class="ui container aligned text container" style="padding-top:20px;">
    <h1>Admin control panel</h1>
    <h4>
                <i class="settings icon"></i>
                Forum Content - configure general settings of your forum.
    </h4>
    <div class="ui grid">
      @* Row 1 start *@
      <div class="three column row">
        <div class="ui cards">
          <div class="card">
            <div class="content">
              <div class="header"> <i class="home icon"></i>Home content</div>
              <div class="description">
                Manage forum settings such as the name, description etc.
              </div>
            </div>
            <a class="ui bottom attached green button" href="/Forum/Create">
              <i class="add icon"></i>
              Edit settings
            </a>
          </div>
          <div class="card">
            <div class="content">
              <div class="header"><i class="info icon"></i>About Content</div>
              <div class="description">
                Change the content that appears on the forum about us page.
              </div>
            </div>
            <a class="ui bottom attached green button" href="/Admin/ModeratorPanel">
              <i class="add icon"></i>
              Edit about
            </a>
          </div>
          <div class="card">
            <div class="content">
              <div class="header"><i class="help icon"></i>Help</div>
              <div class="description">
                Submit a help request to the Forum Core team. 
              </div>
            </div>
            <a class="ui bottom attached green button" href="/Forum/Create">
              <i class="add icon"></i>
              Get help
            </a>
          </div>
        </div>
      </div>
    <h4>
      <i class="laptop icon"></i>
      Forum Settings - manage all of the relevant settings of your forum.
    </h4>
        <div class="three column row">
          <div class="ui cards">
            <div class="card">
              <div class="content">
                <div class="header"> <i class="book icon"></i>Create Forum</div>
                <div class="description">
                  Forum topics are where users can create and reply to posts.
                </div>
              </div>
              <a class="ui bottom attached green button" href="/Forum/Create">
                <i class="add icon"></i>
               Create Forum
              </a>
            </div>
            <div class="card">
              <div class="content">
                <div class="header"><i class="chess king icon"></i>Moderator Panel</div>
                <div class="description">
                  Moderators have the ability to edit and delete users posts, but not delete a forum.
                </div>
              </div>
              <div class="ui bottom attached green button">
                <i class="add icon"></i>
                <a href="/Admin/ModeratorPanel" style="color:white">Moderator Panel</a>
              </div>
            </div>
            <div class="card">
              <div class="content">
                <div class="header"><i class="arrow circle up icon"></i>Rating system</div>
                <div class="description">
                  From here you can change how many points are awarded to a user for posting or replying to a post.
                </div>
              </div>
              <a class="ui bottom attached green button" href="/Forum/Create">
                <i class="add icon"></i>
                 Change Ratings
              </a>
            </div>
          </div>
        </div>
        @* Row 1 end *@

        @* Row 2 start *@
        <div class="three column row">
          <div class="ui cards">
            <div class="card">
              <div class="content">
                <div class="header"><i class="globe icon"></i>Recent Post Count</div>
                <div class="description">
                  Change how many recent posts show on the homepage.
                </div>
              </div>
              <div class="ui bottom attached green button">
                <i class="add icon"></i>
                <a href="/Forum/Create" style="color:white">Change Total</a>
              </div>
            </div>
            <div class="card">
              <div class="content">
                <div class="header"><i class="clock icon"></i>Forum Activity</div>
                <div class="description">
                  Change how long it takes for a forum to become inactive after its most recent post.
                </div>
              </div>
              <a class="ui bottom attached green button" href="/Forum/Create">
                <i class="add icon"></i>
                Change Activity
              </a>
            </div>
            <div class="card">
              <div class="content">
                <div class="header"><i class="star icon"></i>Donation Settings</div>
                <div class="description">
                  Configure your forum to be enable users to donate for certain perks.
                </div>
              </div>
              <a class="ui bottom attached green button" href="/Forum/Create" >
                <i class="add icon"></i>
                Configure Donations
              </a>
            </div>
          </div>
        </div>
        @* Row 2 end *@
      </div>
</div>
<br>