@model StopGambleProject.Models.Post.NewPostModel

<div class="ui center aligned text container">
    <h1>New Post : @Model.ForumName</h1>
        <form asp-action="AddPost" method="post" class="ui form" id="addPostForm">
            <div class="field">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="field">
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control" style="width: 100%;height: 150px;
  box-sizing: border-box;
  border: 2px solid #ccc;
  border-radius: 4px;
  background-color: #f8f8f8;
  resize: none;" />
            </div>
            <button type="submit" class="ui green button" id="submitPostBtn">Submit Post</button>
            <input asp-for="ForumId" type="hidden"/>
        </form>
    </div>>
