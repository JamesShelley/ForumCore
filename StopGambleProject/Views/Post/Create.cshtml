@model StopGambleProject.Models.Post.NewPostModel
@using Microsoft.AspNetCore.Identity
@using Project.Data.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="ui center aligned text container">
    <h1>New Post : @Model.ForumName</h1>
    <form asp-action="AddPost" method="post" class="ui form" id="addPostForm">
        <div class="field">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="field">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control" rows="20" placeholder="Your post..." style="box-sizing: border-box; border: 2px solid #ccc;border-radius: 4px;background-color: #f8f8f8;resize: none;" /></textarea>
        </div>
        <button type="submit" class="ui green button" id="submitPostBtn">Submit Post</button>
        <input asp-for="ForumId" type="hidden" />
    </form>
</div>>
